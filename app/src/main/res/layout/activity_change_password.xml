<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/pdf_bg"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent">

        <include
                android:id="@+id/toolbar"
                layout="@layout/my_toolbar"/>

        <TextView
                android:id="@+id/title"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:text="@string/reset_password"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/screen_title_color"
                android:textSize="22sp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        <EditText
                android:id="@+id/et_current_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_bg_drawable"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ubuntu_r"
                android:padding="15dp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"
                android:textColor="@color/app_black_color_code"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:hint="@string/current_password"/>

        <EditText
                android:id="@+id/et_new_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_bg_drawable"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu_r"
                android:padding="15dp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"
                android:textColor="@color/app_black_color_code"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_current_password"
                android:hint="@string/new_password"/>

        <EditText
                android:id="@+id/et_repeat_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shadow_bg_drawable"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu_r"
                android:padding="15dp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"
                android:textColor="@color/app_black_color_code"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:imeOptions="actionDone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_new_password"
                android:hint="@string/repeat_new"/>

        <TextView
                android:id="@+id/btn_save"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="@string/save"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_b"
                android:padding="10dp"
                android:textColor="@color/app_black_color_code"
                android:textSize="16sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
