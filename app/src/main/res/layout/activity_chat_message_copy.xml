<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <include
            android:id="@+id/toolbar"
            layout="@layout/my_toolbar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/ubuntu_b"
            android:gravity="center"
            android:text="@string/message_copy_title"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/share_chat"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_corner_drawable"
            android:fontFamily="@font/ubuntu_b"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/share_chat"
            android:textAllCaps="true"
            android:textColor="@color/app_white_color_code"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/not_share_chat"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_chat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_corner_drawable"
            android:fontFamily="@font/ubuntu_m"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/not_share_chat"
            android:textAllCaps="true"
            android:textColor="@color/app_white_color_code"
            android:textSize="14sp" />

    </RelativeLayout>
</layout>
