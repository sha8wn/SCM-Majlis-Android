<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/pdf_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/skip"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="@string/skip"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/app_black_color_code"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/title"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:text="@string/review"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/app_black_color_code"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/skip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/sub_title"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:text="Dr. Jane Doe"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/app_black_color_code"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_numStars="5"
                app:srb_rating="0"
                android:padding="10dp"
                app:srb_starWidth="35dp"
                app:srb_starHeight="35dp"
                app:srb_isIndicator="false"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub_title"
                app:srb_clickable="true"
                app:srb_scrollable="true"
                app:srb_clearRatingEnabled="true"
                app:srb_drawableEmpty="@drawable/rating_unselected"
                app:srb_drawableFilled="@drawable/rating_selected">
        </com.willy.ratingbar.ScaleRatingBar>

        <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/shadow_bg_drawable"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu_r"
                android:padding="15dp"
                android:minLines="6"
                android:gravity="top|start"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:theme="@style/MyEditTextTheme"
                android:textColor="@color/app_black_color_code"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/star"
                android:hint="@string/feedback"/>


        <TextView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_add"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="@string/add_review"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_b"
                android:padding="15dp"
                android:textColor="@color/app_black_color_code"
                android:textSize="16sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
