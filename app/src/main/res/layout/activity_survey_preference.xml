<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/toolbar"
                layout="@layout/my_toolbar"/>

        <TextView
                android:id="@+id/title"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:text="@string/select_prefence"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/any_prefer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="18dp"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/white_corner_drawable"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:text="@string/any_prefernce"
                android:textAllCaps="true"/>

        <TextView
                android:id="@+id/female_prefer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="18dp"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_corner_drawable"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/any_prefer"
                android:text="@string/female_prefernce"
                android:textAllCaps="true"/>
        <TextView
                android:id="@+id/male_prefer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="18dp"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_corner_drawable"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/female_prefer"
                android:text="@string/male_prefernce"
                android:textAllCaps="true"/>


        <TextView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_continue"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="@string/continu"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/ubuntu_b"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
