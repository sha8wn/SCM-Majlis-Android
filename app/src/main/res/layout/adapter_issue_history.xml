<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:id="@+id/item"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/chat_icon"/>

    <TextView
            android:id="@+id/message_count"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:fontFamily="@font/ubuntu_b"
            android:background="@drawable/circle_drable"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/chat_icon"
            app:layout_constraintLeft_toLeftOf="@+id/chat_icon"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/chat_icon"
            app:layout_constraintRight_toLeftOf="@+id/chat_icon"
            android:text=""/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/chat_icon"
            app:layout_constraintRight_toRightOf="parent"
    >

        <TextView
                android:id="@+id/survey1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:textColor="@color/app_black_color_code"
                android:textSize="16sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ANXITY"/>
        <TextView
                android:id="@+id/survey2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/app_black_color_code"
                android:textSize="16sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="AGGRESSION"/>

        <TextView
                android:id="@+id/survey3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_b"
                android:gravity="center"
                android:textColor="@color/app_black_color_code"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="MATERNAL"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>