<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shadow_bg_drawable"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/ubuntu_b"
                android:text="@string/expert"
                android:textColor="@color/screen_title_color"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@+id/name_label"
                android:layout_toLeftOf="@+id/paid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:textSize="14sp"/>


        <TextView
                android:id="@+id/paid_label"
                android:layout_toLeftOf="@+id/paid_status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:backgroundTint="@color/paid_color"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/circle_drable"/>


        <TextView
                android:id="@+id/paid_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/opensans_r"
                android:textStyle="bold"
                android:textColor="@color/paid_color"
                android:text="@string/paid"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/time_label"
                android:layout_below="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/ubuntu_b"
                android:text="@string/time"
                android:textColor="@color/screen_title_color"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/time"
                android:layout_toRightOf="@+id/time_label"
                android:layout_below="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:textSize="14sp"/>


        <TextView
                android:id="@+id/room_label"
                android:layout_below="@+id/time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/screen_title_color"
                android:text="@string/room"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/room"
                android:layout_below="@+id/time_label"
                android:layout_toRightOf="@+id/room_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="14sp"/>


        <TextView
                android:id="@+id/amount_label"
                android:layout_below="@+id/name_label"
                android:layout_toLeftOf="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/screen_title_color"
                android:text="@string/earned"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/amount"
                android:layout_below="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:singleLine="true"
                android:textSize="14sp"/>


        <TextView
                android:id="@+id/txn_id_label"
                android:layout_below="@+id/room_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/screen_title_color"
                android:text="@string/txn_id"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/txn_id"
                android:layout_below="@+id/room_label"
                android:layout_toRightOf="@+id/txn_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:textSize="14sp"/>


        <TextView
                android:id="@+id/date_label"
                android:layout_below="@+id/txn_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_b"
                android:textColor="@color/screen_title_color"
                android:text="@string/date"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/date"
                android:layout_below="@+id/txn_id_label"
                android:layout_toRightOf="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="@color/screen_title_color"
                android:text=""
                android:textSize="14sp"/>

    </RelativeLayout>
</LinearLayout>
