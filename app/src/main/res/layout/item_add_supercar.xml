<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/transparent_corner_drawable"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|start"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:text="@string/brand"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/down_arrow"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/brand"
            android:imeOptions="actionNext"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_color"
            android:textDirection="locale"
            android:textSize="14sp"
            android:theme="@style/MyEditTextTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|start"
            android:paddingEnd="10dp"
            android:text="@string/model"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_brand" />

        <EditText
            android:id="@+id/et_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/down_arrow"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/model"
            android:imeOptions="actionNext"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_color"
            android:textDirection="locale"
            android:textSize="14sp"
            android:theme="@style/MyEditTextTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_model" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|start"
            android:paddingEnd="10dp"
            android:text="@string/color"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_model" />

        <EditText
            android:id="@+id/et_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/down_arrow"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/color"
            android:imeOptions="actionNext"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_color"
            android:textDirection="locale"
            android:textSize="14sp"
            android:theme="@style/MyEditTextTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_color" />

        <TextView
            android:id="@+id/tv_car_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|start"
            android:paddingEnd="10dp"
            android:text="@string/car_register"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_color" />


        <LinearLayout
            android:id="@+id/registration_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_register">

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_car_front"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/camera"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/upload_Registration_front"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/image_car_front"
                    app:layout_constraintLeft_toLeftOf="@+id/image_car_front"
                    app:layout_constraintRight_toRightOf="@+id/image_car_front"
                    app:layout_constraintTop_toTopOf="@+id/image_car_front" />

                <ImageView
                    android:id="@+id/image_car_front"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashed_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_car_front_cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/cross"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="@+id/image_car_front"
                    app:layout_constraintTop_toTopOf="@+id/image_car_front" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_car_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/camera"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/upload_Registration_back"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/image_car_back"
                    app:layout_constraintLeft_toLeftOf="@+id/image_car_back"
                    app:layout_constraintRight_toRightOf="@+id/image_car_back"
                    app:layout_constraintTop_toTopOf="@+id/image_car_back" />

                <ImageView
                    android:id="@+id/image_car_back"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashed_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_car_back_cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/cross"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="@+id/image_car_back"
                    app:layout_constraintTop_toTopOf="@+id/image_car_back" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_car_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/camera"
            android:drawablePadding="5dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/upload_car_image"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/ivCar"
            app:layout_constraintLeft_toLeftOf="@+id/ivCar"
            app:layout_constraintRight_toRightOf="@+id/ivCar"
            app:layout_constraintTop_toTopOf="@+id/ivCar" />

        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="0dp"
            android:layout_height="155dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dashed_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registration_view" />

        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/cross"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/ivCar"
            app:layout_constraintTop_toTopOf="@+id/ivCar" />

        <TextView
            android:id="@+id/delete_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/delete_car"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCar" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_add_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/plus_icon"
        android:fontFamily="@font/seguisb"
        android:gravity="center"
        android:text="@string/add_supercar"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCars" />
</LinearLayout>

